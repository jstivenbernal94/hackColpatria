@model ViewModels.Login
@{
    ViewBag.Title = "Proveedores";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-image:url('../../Imagenes/bg.jpg');color:white!important">
    @using (Html.BeginForm())
    {
    <div class="container-fluid">
        <nav class="row navbar navbar-light bg-light">
            <a class="navbar-brand" href="">
                <img style="width:50%;float:left;margin-top:-50px!important;" src="../../Imagenes/scotiabankColpatriaLogos.png" />
            </a>

        </nav>
        <div class="container">
            <div class="row ">
                <div class="col-lg-12 d-flex justify-content-lg-center">
                    <div class="col-lg-4 col-lg-offset-4">
                        <h3 style="color:white;">Sistema control de productos</h3>
                        </div>
                        <div class="col-lg-4 col-lg-offset-4">
                            <br />
                            @*<label>Nombre</label>*@
                            <div>Nombre: @Html.TextBoxFor(p => p.usuario, new { @class = "form-control d-flex justify-content-lg-center" })</div>
                            @*<input class="form-control" type="text" placeholder="Nombre" name="usuario" />*@
                        </div>
                        <div class="col-lg-4 col-lg-offset-4">
                            <br />
                            @*<label>Contraseña</label>
                <input class="form-control" type="text" placeholder="Contraseña" name="contraseña" />*@
                            <div>Contraseña: @Html.TextBoxFor(p => p.contraseña, new { @class = "form-control",type="password" })</div>
                        </div>
                        <div class="col-lg-4 col-lg-offset-4">
                            <br /><br />
                            <input class="btn btn-success btn-block" type="submit" value="Ingresar" />
                        </div>

                    </div>
                </div>
        </div>
    </div>
        }
</body>
</html>